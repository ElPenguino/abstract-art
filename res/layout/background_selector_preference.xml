<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayouttest"
    android:background="@drawable/earthbound_tile_repeat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<FrameLayout
		android:background="@drawable/earthbound_menu"
		android:layout_gravity="center"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		
		android:layout_marginTop="4dp"
	    android:layout_marginLeft="4dp"
	    android:layout_marginRight="4dp"
	    android:layout_marginBottom="2dp">
	    
	    <android.opengl.GLSurfaceView
	        android:layout_gravity="center"
	        android:id="@+id/thumbnailGLSurfaceView"
	        android:layout_width="256px"
	        android:layout_height="256px" />
	    
	</FrameLayout>
	
	<FrameLayout
	    android:background="@drawable/earthbound_menu"
	    android:layout_gravity="center"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp">

	    <GridView
	        android:id="@+id/bgThumbGridView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:horizontalSpacing="4dp"
	        android:verticalSpacing="4dp"
	        android:numColumns="auto_fit"
	        android:stretchMode="columnWidth"><!-- spacingWidth, columnWidth, spacingWidthUniform -->"
	    </GridView>
	    
	</FrameLayout>

</LinearLayout>